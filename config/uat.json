{
  "api": {
    "protocol":"http",
    "domain":"localhost",
    "port": 5000,
    "baseURL": "/api/v1",
    "version": "0.0.1",
    "routesFolder": "./src/routes"
  },
  "logger": {
    "transports": [
      {
        "config": {
          "type": "transports.File",
          "rotate": true
        },
        "options": {
          "filename": "logs/filelog-error.log",
          "level": "error",
          "name": "error-file",
          "datePattern":".ddd",
          "json": false
        }
      },
      {
        "config": {
          "type": "transports.File",
          "rotate": true
        },
        "options": {
          "filename": "logs/filelog-info.log",
          "level": "info",
          "name": "info-file",
          "datePattern":".ddd",
          "json": false
        }
      }
    ]
  },
 "test":{
    "reports":{
      "url":"/coverage",
      "path":"./src/public/coverage/lcov-report"
    }
  },
  "swagger":{
    "url":"/swagger",
    "path":"./src/public/swagger"
  }
}