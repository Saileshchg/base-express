{
  "api": {
    "protocol":"http",
    "domain":"localhost",
    "port": 3000,
    "baseUrl": "/api/v1",
    "version": "0.0.1",
    "routesFolder": "./src/routes",
    "name": "Express Base"
  },
  "logger": {
    "transports": [
      {
        "config": {
          "type": "transports.Console"
        },
        "options": {
          "level": "debug",
          "colorize": true
        }
      }
    ]
  },
  "test":{
    "reports":{
      "url":"/coverage",
      "path":"./src/public/coverage/lcov-report"
    }
  },
  "swagger":{
    "url":"/swagger",
    "path":"./src/public/swagger"
  }
}